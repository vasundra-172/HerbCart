<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
    <h2 class="col-6 offset-5">Profile</h2>
    <br><br><br>
    <div class="col-6 offset-3">
            <div class="mb-3 myprofile">
                <div><label for="username" class="form-label"><b>Username</b></label>
                    <p><%= currUser.username %></p>
                </div>
                <div><label for="username" class="form-label"><b>Email</b></label>
                    <p><%= currUser.email %></p>
                </div>
            </div>
        <hr>
        <br>
        <h4 class="col-6 offset-4">My Contributions</h4>
        <br>
        <div class="row">
        <% for(let listing of allListings) { %>
            <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
                <div class="col-md-6">
                    <div class="card show-card listing-card">
                        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="herb_image">
                        <div class="card-body">
                          <p class="card-text"><%= listing.title %></p>
                          <p class="card-text">&#8377; <%= listing.price %></p>
                          <p class="card-text"> <%= listing.description %></p>
                        </p>
                        </div>
                    </div>
                </div>
                <% } %>
            <% } %>
        </div>
    </div>
</div>
